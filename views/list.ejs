<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <main>
        <h1>Content List</h1>
        <table border="1">
            <thead>
                <tr>
                    <th>id</th>
                    <th>user name</th>
                    <th>user email</th>
                    <th>user content</th>
                    <th>date</th>
                    <% if (content.length !== 0) { %>
                        <th></th>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% if (content.length === 0) { %>
                    <tr>
                        <td colspan="5">No data</td>
                    </tr>
                <% } else { %>
                    <% content.forEach(function (value, key) { %>
                        <tr>
                            <td><%= value["user_id"] %></td>
                            <td><%= value["user_name"] %></td>
                            <td><%= value["user_email"] %></td>
                            <td><%= value["content"] %></td>
                            <td><%= value["date"] %></td>
                            <td>
                                <form action="/delete" method="post">
                                    <input type="hidden" name="id" value="<%= value['user_id'] %>">
                                    <input type="submit" value="削除">
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } %>
            </tbody>
        </table>
        <a href="/">Back to Top Page.</a>
    </main>
</body>
</html>